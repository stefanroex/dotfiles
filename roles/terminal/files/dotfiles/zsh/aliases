alias ...='../..'
alias aliases='nvim ~/.dotfiles/roles/terminal/files/dotfiles/zsh/aliases'
alias cd="zd"
alias ci="zi"
alias d='cd ~/.dotfiles'
alias e='nvim'
alias amend='git commit --amend'
alias ff="fzf --preview 'bat --style=numbers --color=always {}'"
alias ga='git add . && git add -u && gs'
alias gc='git commit'
alias gd='git diff'
alias gdc='git diff --cached'
alias gdm='git fetch --prune && git branch -vv | grep ": gone]" | awk "{print \$1}" | xargs -n 1 git branch -D'
alias gs='git status'
alias ip="curl -s checkip.dyndns.org | grep -Eo '[0-9\.]+'"
alias ls='eza -lh --group-directories-first --icons=auto'
alias lsa='ls -a'
alias lt='eza --tree --level=2 --long --icons --git'
alias lta='lt -a'
alias mkdir='mkdir -p'
alias rsync='rsync --progress'
alias server='python3 -m http.server'
alias so='source ~/.dotfiles/zsh/aliases'
alias tailscale="/Applications/Tailscale.app/Contents/MacOS/Tailscale"
