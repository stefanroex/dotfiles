c() { cd ~/Code/$1; }
_c() { _files -W ~/Code -/; }
compdef _c c

function hs() {
  heroku "$@" --remote staging
}

function hp() {
  heroku "$@" --remote production
}

function awss() {
  sed -i -e "s/\(AWS_PROFILE=\).*/\1$@/g" ~/.zshenv
}

function awsl() {
  sed -i -e "s/\(AWS_SESSION_TOKEN=\).*/\1$@/g" ~/.zshenv
}
