alias ...='../..'
alias a='ls -lrthG'
alias aliases='mvim -v ~/.dotfiles/zsh/aliases'
alias amend="git commit --amend"
alias ass='rm -rf tmp/cache && pow restart'
alias cbundle='rm -rf vendor/bundle && bundle install --system --binstubs'
alias d='cd ~/.dotfiles'
alias e='mvim -v'
alias ga='git add . && git add -u && gs'
alias gc='git commit'
alias gci="git pull --rebase && rake && git push"
alias gd='git diff'
alias gdc='git diff --cached'
alias gdm='git branch --merged | grep -v "\*" | xargs -n 1 git branch -d'
alias gm='git commit -m'
alias gph='git push staging master && herokus run rake db:migrate && herokus restart && herokus open'
alias gphp='git push production master && herokup run rake db:migrate && herokup restart && herokup open'
alias gs='git status'
alias ip="curl -s checkip.dyndns.org | grep -Eo '[0-9\.]+'"
alias killruby='killall -9 ruby'
alias logs='powder applog'
alias mkdir='mkdir -p'
alias n='e notes.txt'
alias pc='production-console'
alias pow='powder'
alias rbh="rbenv rehash"
alias rdm="rake db:migrate && rake db:migrate RAILS_ENV=test"
alias rdr="rake db:rollback && rake db:rollback RAILS_ENV=test"
alias re='powder restart'
alias restart_postgres="stoppostgres && startpostgres"
alias restore='pg_restore --verbose --clean --no-acl --no-owner -h localhost -d `basename $PWD`_development '
alias retag='ctags -R --exclude=vendor * --exclude=.git --exclude=log *'
alias rk="rake"
alias rsync='rsync --progress'
alias s='pow open && e'
alias server='python -m SimpleHTTPServer'
alias so='source ~/.dotfiles/zsh/aliases'
alias startredis='redis-server /usr/local/etc/redis.conf &'
alias vi='mvim -v'
alias z="zeus"

alias -g M='| more'
alias -g L='| less'

# Heroku staging
alias staging-console='heroku run console'
alias staging-tail='heroku logs --tail'

# Heroku production
alias production-console='heroku run console --remote production'
alias production-tail='heroku logs --tail --remote production'

# Heroku databases
alias db-pull-staging='herokus pgbackups:url | xargs curl -o staging.sql'
alias db-pull-production='herokup pgbackups:url | xargs curl -o production.sql'

alias db-copy-staging-to-development='db-pull-staging && restore staging.sql'
alias db-copy-production-to-development='db-pull-production && restore production.sql'
alias db-copy-production-to-staging='herokus pgbackups:restore DATABASE `herokup pgbackups:url` --confirm `basename $PWD`-staging'

alias db-backups-capture='herokup pgbackups:capture --expire'
