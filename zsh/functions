c() { cd ~/code/$1; }
_c() { _files -W ~/code -/; }
compdef _c c

rake() {
  if [ -S .zeus.sock ]; then
    zeus rake "$@"
  else
    command rake "$@"
  fi
}

rspec() {
  if [ -S .zeus.sock ]; then
    zeus rspec "$@"
  else
    command rspec "$@"
  fi
}

function mcd() {
  mkdir -p "$1" && cd "$1";
}
