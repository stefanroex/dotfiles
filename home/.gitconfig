[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[alias]
  b = branch -v                     # branch (verbose)
  d = diff                          # diff unstaged changes
  dc = diff --cached                # diff staged changes
  l = log --graph --date=short
  rc = rebase --continue            # continue rebase
  rs = rebase --skip                # skip rebase
  r = remote -v                     # show remotes (verbose)
  st = status                       # status
[format]
  pretty = format:%C(white)%ad%Creset %C(green)%h%C(yellow)%d%Creset %C(white)%s %C(magenta) [%an]%Creset
[merge]
  summary = true
  verbosity = 1
[advice]
  statusHints = false
[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = true
[core]
  autocrlf = input
  editor = vim
  excludesfile = ~/.gitignore
[diff]
  mnemonicprefix = true
[push]
  default = simple
[pull]
  rebase = true
[rerere]
  enabled = true
[credential]
  helper = osxkeychain
[user]
  email = info@stefanroex.nl
  name = Stefan Roex
